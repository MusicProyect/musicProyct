<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ListaPlaylist"
    android:background="#000000"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">
    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_margin="15dp"
        android:onClick="irConfiguracion"
        android:background="@drawable/confi"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#000000">
        <TextView android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15pt"
            android:layout_marginTop="10pt"
            android:textColor="#ffffff"
            android:text="Reggaeton"
            android:layout_marginBottom="12pt"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10pt">
                <Button
                    android:layout_width="20pt"
                    android:layout_height="20pt"
                    android:layout_marginTop="5pt"
                    android:background="@drawable/corazon"/>
                <Button
                    android:layout_width="25pt"
                    android:layout_height="25pt"
                    android:layout_marginTop="10pt"
                    android:background="@drawable/compartir"/>

            </LinearLayout>
            <ImageView
                android:layout_width="80pt"
                android:layout_height="80pt"
                android:src="@drawable/planbal"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10pt">
                <Button
                    android:layout_width="20pt"
                    android:layout_height="20pt"
                    android:layout_marginTop="5pt"
                    android:background="@drawable/descargar"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="13pt"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:text="20">

                    </TextView>

                    <Button
                        android:layout_width="20pt"
                        android:layout_height="20pt"
                        android:background="@drawable/music"/>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
        <TextView android:id="@+id/artista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15pt"
            android:layout_marginTop="7pt"
            android:textColor="#ffffff"
            android:text="Reproducciones"/>
        <TextView android:id="@+id/anio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="9pt"
            android:layout_marginTop="1pt"
            android:textColor="#ffffff"
            android:text="20.101.640"/>


    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lista2"
        android:layout_margin="5dp"></ListView>


</LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:padding="15dp"
        android:layout_gravity="bottom">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/planbal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="Es un secreto Â· Plan b"
            android:textColor="@android:color/white"
            android:textSize="10pt"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/play"/>
    </LinearLayout>
<com.google.android.material.bottomnavigation.BottomNavigationView
android:id="@+id/bottom_navigation_view"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_alignParentBottom="true"
android:layout_gravity="bottom"
app:itemIconTint="#CF1F34"
app:itemTextColor="#ffffff"
app:menu="@menu/bottom_navigation_menu" />
    </RelativeLayout>