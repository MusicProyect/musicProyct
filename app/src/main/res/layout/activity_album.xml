<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".Album">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#000000">
        <TextView android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15pt"
            android:layout_marginTop="40pt"
            android:textColor="#ffffff"
            android:text="House of Pleasure"
            android:layout_marginBottom="12pt"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10pt">
                <Button
                    android:layout_width="20pt"
                    android:layout_height="20pt"
                    android:layout_marginTop="5pt"
                    android:background="@drawable/corazon"/>
                <Button
                    android:layout_width="25pt"
                    android:layout_height="25pt"
                    android:layout_marginTop="10pt"
                    android:background="@drawable/compartir"/>

            </LinearLayout>
            <ImageView
                android:layout_width="80pt"
                android:layout_height="80pt"
                android:src="@drawable/houseofplesure"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10pt">
                <Button
                    android:layout_width="20pt"
                    android:layout_height="20pt"
                    android:layout_marginTop="5pt"
                    android:background="@drawable/descargar"/>

                <Button
                    android:layout_width="20pt"
                    android:layout_height="20pt"
                    android:layout_marginTop="13pt"
                    android:background="@drawable/add"/>

            </LinearLayout>
        </LinearLayout>
        <TextView android:id="@+id/artista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15pt"
            android:layout_marginTop="7pt"
            android:textColor="#ffffff"
            android:text="Plan B"/>
        <TextView android:id="@+id/anio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="9pt"
            android:layout_marginTop="1pt"
            android:textColor="#ffffff"
            android:text="2010"/>


    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lista"
        android:layout_margin="5dp"/>

</LinearLayout>