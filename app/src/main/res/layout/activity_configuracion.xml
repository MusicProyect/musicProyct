<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Configuracion"
    android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="130dp"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#000000">
        <TextView android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20pt"
            android:layout_marginTop="40pt"
            android:textColor="#ffffff"
            android:text="Settings" />
        <Button
            android:id="@+id/button_id"
            android:layout_height="wrap_content"
            android:layout_width="80pt"
            android:layout_marginTop="10pt"
            android:text="Premium"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_rounded"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10pt">
            <ImageView
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:src="@drawable/foto"
                android:layout_marginLeft="10pt"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="7pt">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vivian Loza"
                    android:textColor="#FFFFFF"
                    android:textSize="10pt" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Profile"
                    android:textColor="#FFFFFF"
                    android:textSize="5pt"/>

            </LinearLayout>
            <Button
                android:layout_width="20pt"
                android:layout_height="20pt"
                android:background="@drawable/flecha"
                android:layout_gravity="center"
                android:layout_marginLeft="40pt"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15pt"
            android:layout_marginLeft="10pt">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offine"
                android:textColor="#FFFFFF"
                android:textSize="10pt"/>
            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:switchMinWidth="56dp"
                android:checked="true"
                android:textColor="#ffffff"
                android:textOff="OFF"
                android:layout_marginLeft="100pt"
                android:textOn="ON"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15pt"
            android:layout_marginLeft="10pt">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ecualizador"
                android:textColor="#FFFFFF"
                android:textSize="10pt"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15pt"
            android:layout_marginLeft="10pt">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Almacenamiento"
                android:textColor="#FFFFFF"
                android:textSize="10pt"/>
            <ProgressBar
                android:id="@+id/determinateBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="150pt"
                android:layout_height="3pt"
                android:progress="25"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15pt"
            android:layout_marginLeft="10pt">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Versión"
                android:textColor="#FFFFFF"
                android:textSize="10pt"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15pt"
            android:layout_marginLeft="10pt"
            android:layout_marginBottom="10pt">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cerrar Sesión"
                android:textColor="#FFFFFF"
                android:textSize="10pt"/>
        </LinearLayout>

    </LinearLayout>
     </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:padding="15dp"
        android:layout_gravity="bottom">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/planbal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="Es un secreto · Plan b"
            android:textColor="@android:color/white"
            android:textSize="10pt"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/play"/>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        app:itemIconTint="#CF1F34"
        app:itemTextColor="#ffffff"
        app:menu="@menu/bottom_navigation_menu" />
</RelativeLayout>